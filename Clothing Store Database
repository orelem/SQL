/** Select all data from store database and display in a table ordered by price **/
SELECT * FROM clothing_store ORDER BY "Price ($)";

/** Select the max price and cost from the store database then display them in a table **/
SELECT MAX("price ($)"), MAX("cost ($)") FROM clothing_store;
